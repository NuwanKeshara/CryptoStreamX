{
  "name": "clickhouse-sink",
  "config": {
    "connector.class": "com.clickhouse.kafka.connect.ClickHouseSinkConnector",
    "tasks.max": "1",

    "topics": "binance_trade,binance_trade_agg_1m,binance_trade_agg_5m",
    "batch.size": "1000",
    "linger.ms": "5000",   
    "max.retries": "3",

    "hostname": "clickhouse",            
    "port": "8123",                       
    "database": "crypto",
    "username": "default",
    "password": "root",

    "topic2TableMap": "binance_trade:binance_trade,binance_trade_agg_1m:binance_trade_agg_1m,binance_trade_agg_5m:binance_trade_agg_5m",
    "insert.mode": "insert",
    "auto.create.tables": "true",
    "auto.evolve": "true",

    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "dlq-clickhouse",
    "errors.deadletterqueue.context.headers.enable": "true",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "false",
    
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schemas.enable": "true",
    "value.converter.schema.registry.url": "http://schema-registry:8081"
  }
}
